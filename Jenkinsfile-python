pipeline {
    agent any 
    parameters {
        string (
            name: 'PYTHON_SERVER_IP',
            defaultValue: '172.31.9.65',
            description: 'IP of the target server'
        )
    }
    stages {
        stage ('checkout') {
            steps {
                checkout scm
            }
        }
        
        stage ('build') {
            steps{
                sshagent (credentials: ['master-key']) {
                    sh """
                        ssh -o StrictHostKeyChecking=no ec2-user@${params.PYTHON_SERVER_IP} '
                        sudo yum install git -y; 
                        sudo yum install python3 -y;'
                    """
                }
            }
            }
        
        stage ('deploy python service') {
            steps{
                sshagent (credentials: ['master-key']) {
                    sh """
                        ssh -o StrictHostKeyChecking=no ec2-user@${params.PYTHON_SERVER_IP} '
                        sudo rm -rf fruits-veg_market; 
                        git clone https://github.com/albert85/fruits-veg_market.git; 
                        cd fruits-veg_market/python;
                        sudo python3 -m venv .venv;
                        source .venv/bin/activate;
                        pip install -r requirements.txt;
                        deactivate;
                        sudo cp fruit.service /etc/systemd/system/python_fruit.service; 
                        sudo systemctl daemon-reload;
                        sudo systemctl start python_fruit.service;'
                    """
                }
            }
            }
    }
}